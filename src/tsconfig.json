{
  "compilerOptions": {
    "noImplicitAny": false,
    "strict": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es6",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "dist/js",
    "noEmitOnError": true,
    "jsx": "react",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "node_modules/@icnaming/**/interface.ts",
    "node_modules/@icnaming/**/**.d.ts"
  ]
}
