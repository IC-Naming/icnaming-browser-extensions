{
  "manifest_version": 2,
  "name": "IC naming extensions",
  "description": "Extensions to help you visit icnaming from you browser",
  "version": "0.2",
  "background": {
    "page": "background.html",
    "persistent": true
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking",
    "*://*.icp/*"
  ]
}
