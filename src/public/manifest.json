{
  "manifest_version": 2,
  "name": "IC naming extensions",
  "description": "Extensions to help you visit icnaming from you browser",
  "version": "1.1.2",
  "background": {
    "page": "background.html",
    "persistent": true
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "permissions": [
    "tabs",
    "storage",
    "webRequest",
    "webRequestBlocking",
    "*://*.ic/*",
    "*://*.icp/*",
    "*://*.tic/*",
    "*://*.ticp/*"
  ],
  "web_accessible_resources": [
    "redirect.html"
  ]
}
